<div id="notice" class="alert alert-success collapse" role="alert"><%= notice %></div>

<h1>Lists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.name %></td>
        <td><%= link_to 'Show', [@board, list] %></td>
        <td><%= link_to 'Edit', edit_board_list_path(@board, list) %></td>
        <td><%= link_to 'Destroy', [@board, list], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Show Board', [@board] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New List', new_board_list_path(@board) %>
