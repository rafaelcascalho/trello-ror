<div class="form-group w-25 p-3">
  <%= form_with(model: [@board, @list, card], local: true) do |form| %>
    <% if card.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(card.errors.count, "error") %> prohibited this card from being saved:</h2>

        <ul>
          <% card.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <div class="form-group">
        <label>Name</label>
        <%= form.text_field :name, {:class => 'form-control', :placeholder => card.name} %>
      </div>
    </div>

    <div class="field">
      <div class="form-group">
        <label>Deadline</label>
        <%= form.date_select :deadline, {:class => 'form-control', :placeholder => card.deadline} %>
      </div>
    </div>

    <div class="field">
      <div class="form-group">
        <label>Owner</label>
        <%= form.text_field :owner, {:class => 'form-control', :placeholder => card.owner} %>
      </div>
    </div>

    <div class="actions">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>

  <% end %>
</div>
